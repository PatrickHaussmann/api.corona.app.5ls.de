{
  "version": 2,
  "rewrites": [
    { "source": "/country", "destination": "/api/country" },
    { "source": "/districts.geojson", "destination": "/api/districts.geojson" },
    { "source": "/districts", "destination": "/api/districts" },
    { "source": "/states.geojson", "destination": "/api/states.geojson" },
    { "source": "/states", "destination": "/api/states" },
    { "source": "/timeline", "destination": "/api/timeline" },
    { "source": "/", "destination": "/404" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "s-maxage=3600, stale-while-revalidate=21600"
        },
        {
          "key" : "Access-Control-Allow-Origin",
          "value" : "https://corona.app.5ls.de"
        }
      ]
    },
    {
      "source": "/(.*).geojson",
      "headers" : [
        {
          "key" : "Cache-Control",
          "value" : "public, max-age=3600"
        }
      ]
    }
  ]
}
