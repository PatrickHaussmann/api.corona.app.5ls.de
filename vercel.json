{
    "version": 2,
    "rewrites": [
        { "source": "/", "destination": "/404" },
        { "source": "/:file*", "destination": "/api/:file" }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=3600, stale-while-revalidate=21600"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "https://corona.app.5ls.de"
                }
            ]
        },
        {
            "source": "/(.*).geojson",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=259200"
                }
            ]
        }
    ]
}
